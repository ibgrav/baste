{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",

    "jsx": "react-jsx",
    "jsxImportSource": "baste",

    "outDir": "./dist",

    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}

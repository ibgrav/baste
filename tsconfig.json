{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",

    "outDir": "dist",

    "jsx": "react-jsx",
    "jsxImportSource": ".",

    "noEmit": true,
    "strict": true,
    "skipLibCheck": false,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}

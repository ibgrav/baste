{
  "name": "baste",
  "version": "0.0.15",
  "license": "MIT",
  "author": "Isaac Graves",
  "description": "asynchronous jsx templating",
  "repository": {
    "url": "https://github.com/ibgrav/baste"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "jsx-runtime"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.mjs",
      "require": "./dist/jsx-runtime.js"
    }
  },
  "scripts": {
    "dev": "concurrently \"yarn build:rollup --watch\" \"yarn build:tsc --watch\"",
    "build": "yarn build:rollup && yarn build:tsc",
    "build:tsc": "tsc --preserveWatchOutput",
    "build:rollup": "rollup --config rollup.config.js",
    "test": "echo \"No test specified\""
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.3",
    "concurrently": "^7.2.2",
    "prettier": "^2.7.1",
    "rollup": "^2.75.7",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
